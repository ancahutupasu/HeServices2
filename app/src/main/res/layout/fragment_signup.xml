<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/register_user1"
        android:layout_width="172dp"
        android:layout_height="25dp"
        android:text="@string/existing_user"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="341dp"
        android:layout_height="446dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border2"
            android:ems="10"
            android:hint="username"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp"
            tools:hint="@string/usernameSignUp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <EditText
            android:id="@+id/emailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border2"
            android:ems="10"
            android:hint="@string/emailSignUp"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <EditText
            android:id="@+id/passwordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border2"
            android:ems="10"
            android:hint="@string/passwordSignUp"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border2"
            android:ems="10"
            android:hint="@string/nameSignUp"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border2"
            android:ems="10"
            android:hint="@string/phoneNo"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="107dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/role"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Role"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/member"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MEMBER" />

                <RadioButton
                    android:id="@+id/admin"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ADMIN" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/googleLog"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962"
        app:srcCompat="@drawable/google"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/singup"
        android:layout_width="94dp"
        android:layout_height="39dp"
        android:background="@drawable/round_border2"
        android:text="SIGNUP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/loginBut"
        android:layout_width="94dp"
        android:layout_height="36dp"
        android:background="@drawable/round_border2"
        android:text="@string/Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>