<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="251dp"
        android:layout_height="96dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099">


        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:text="HeServices is..."
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="...a transport company with trustworthy drivers."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="...delivering all over the Europe."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="...opened in 2009."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/located"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:text="...located in Stationsvej 31, 9400 NÃ¸rresundby"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vans"
            android:layout_width="323dp"
            android:layout_height="38dp"
            android:text="6 vans each holding weight maximum 1000kg. " />

        <TextView
            android:id="@+id/vans_pallets"
            android:layout_width="310dp"
            android:layout_height="35dp"
            android:text="Each van can hold maximum 9 pallets " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="272dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="439dp"
            android:layout_height="283dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/delivery_with_logo_cut" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>