<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="170dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127">

        <TextView
            android:id="@+id/services"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="SERVICES"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="83dp"
            android:layout_height="49dp"
            app:srcCompat="@mipmap/hs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298">

        <Button
            android:id="@+id/viewmore1"
            android:layout_width="258dp"
            android:layout_height="match_parent"
            android:text="We offer an express service" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="81dp"
            android:layout_height="54dp"
            app:srcCompat="@mipmap/hs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="66dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <Button
            android:id="@+id/viewmore2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="We offer currior services" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="109dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.662">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="89dp"
            android:layout_height="57dp"
            app:srcCompat="@mipmap/hs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="66dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658">

        <Button
            android:id="@+id/viewmore3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="We offer household moving furniture" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>