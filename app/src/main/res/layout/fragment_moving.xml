<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="111dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122">

        <TextView
            android:id="@+id/moving"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:text="We OFFER MOVING SERVICE"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="250dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875">

        <ImageView
            android:id="@+id/image_moving"
            android:layout_width="321dp"
            android:layout_height="232dp"
            app:srcCompat="@drawable/moving" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="321dp"
        android:layout_height="159dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404">

        <TextView
            android:id="@+id/text_desc_moving"
            android:layout_width="308dp"
            android:layout_height="115dp"
            android:text="We do MOVING services where it is home to home service, moving your furniture from one place to another." />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>